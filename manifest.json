{
  "manifest_version": 3,
  "name": "GitHub Live Preview",
  "version": "1.0",
  "description": "Run any GitHub repo and preview it live with stack info.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}
